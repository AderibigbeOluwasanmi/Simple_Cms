<div class="subjects index">
  <h2>Subjects</h2>

  <%= link_to('Add New Page', '#', :class => 'action new') %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>Name</th>
      <th>permalink</th>
      <th>Position</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @pages.each do |page| %>
        <tr>
          <td><%= page.name %></td>
          <td><%= page.permalink %></td>
          <td class="center"><%= page.position %></td>
          <td class="center"><%= page.visible ? 'Yes' : 'No' %></td>
          <td class="actions">
            <%= link_to("Show", '#', :class => 'action show') %>
            <%= link_to("Edit", '#', :class => 'action edit') %>
            <%= link_to("Delete", '#', :class => 'action delete') %>
          </td>
        </tr>
    <% end %>
  </table>
</div>