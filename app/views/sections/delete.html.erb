<%= link_to('<< Back to List', sections_path, :class => 'back-link') %>
<div class="Section delete">
  <h2>Delete Section</h2>

  <%= form_for(@section, :url => section_path(@section), :method => 'delete') do |f| %>

      <P>Are you sure you want to permanently delete this subject?</P>
      <p class="reference-name"><%= f.object.name %></p>
      <div class="form-buttons">
        <%= f.submit('Delete Section') %>
      </div>

  <% end %>
</div>