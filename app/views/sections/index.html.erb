<div class="section index">
  <h2>Section</h2>

  <%= link_to('Add New Section', new_section_path, :class => 'action new') %>

  <table class="listing" summary="Page list">
    <tr class="header">
      <th>Name</th>
      <th>Content</th>
      <th>Position</th>
      <th>Visible</th>
      <th>Actions</th>
    </tr>
    <% @sections.each do |section| %>
        <tr>
          <td class="center"><%= section.name %></td>
          <td><%= section.content %></td>
          <td><%= section.position %></td>
          <td class="center"><%= section.visible ? 'Yes' : 'No' %></td>
          <td class="actions">
            <%= link_to('Show', section_path(section), :class => 'action show') %>
            <%= link_to('Edit', edit_section_path(section), :class => 'action edit') %>
            <%= link_to('Delete', delete_section_path(section), :class => 'action delete') %>
          </td>
        </tr>
    <% end %>
  </table>
</div>